{
  "name": "api-messenger",
  "version": "0.1.0",
  "description": "Api that allows send message through WhatsApp",
  "main": "src/server.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,js}'",
    "build": "npm run lint && tsc && esbuild ./dist/server.js --bundle --minify --platform=node --outfile=./dist/minified/server.min.js",
    "dev": "NODE_ENV=dev nodemon --watch 'src/**' --ext 'ts,json' --exec 'ts-node --transpileOnly src/server.ts'",
    "test": "NODE_ENV=test ts-node --transpileOnly src/server.ts",
    "start:mini": "node ./dist/minified/server.min.js",
    "start": "node ./dist/server.js"
  },
  "keywords": [
    "API",
    "Whatsapp"
  ],
  "author": "Daniel Souza",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "baileys": "^6.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.17.21",
    "express-async-errors": "^3.1.1",
    "nodemon": "^3.1.4",
    "pino": "9.4.0",
    "pino-pretty": "^11.2.2",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/express": "^4.17.21",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  }
}
